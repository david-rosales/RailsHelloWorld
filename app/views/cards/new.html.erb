<div class="row">
    <div class="col s12">
        <div class="card-panel center-align">
            <h4>New Card</h4>
        </div>
        <div class="card-panel">
            <%= form_for :card, url: create_path do |f| %>
                <p>
                    <%= f.label :title %><br>
                    <%= f.text_field :title %>
                </p>
                <p>
                    <%= f.label :description %><br>
                    <%= f.text_area :description %>
                </p>
                <div>
                    <%= f.label :urgency %><br>
                    <%= f.radio_button :urgency, '1' %> 
                    <%= f.label :urgency, 'Do Right Now', :value => '1' %>
                    <%= f.radio_button :urgency, '2' %>
                    <%= f.label :urgency, 'Do Sometime Later', :value => '2' %>
                    <%= f.radio_button :urgency, '3' %>
                    <%= f.label :urgency, 'Do Whenever', :value => '3' %>
                </div>
                <p>
                    <%= f.label :details %>
                    <%= f.text_area :details %>
                </p>
                <p>
                    <%= f.submit %>
                </p>
            <% end %>
        </div>
    </div>
</div>

<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
    <a href="/" class="btn-floating btn-large red">
      <i class="large material-icons">close</i>
    </a>
</div>